<div class="container">
    <div class="row">
        <div class-"col" style ="width:100%;">
          <div class="address-title item-title m-4 text-center" style="width:20%;">
            <h4 class="bg-light">配送先登録/一覧</h4>
          </div>
          <%= form_for (@address),url:  public_addresses_path do |f| %>
            <div class="address-all d-flex justify-content-around m-4">
              <div class="address-item">
                <p class="m-1">郵便番号(ハイフンなし)</p>
                <p class="mt-4 ml-4">住所</p>
                <p class="ml-4">宛名</p>
              </div>
                <div class="address-information">
                    <div class="address-list d-block">
                      <p><%= f.text_field :postal_code,:placeholder=>"509-4404" %></p>
                      <p><%= f.text_field :address,:style=> "padding-right:300px;",:placeholder=>"福岡県北九州市" %></p>
                      <p><%= f.text_field :name,:placeholder=>"太郎" %></p>
                    </div>
                </div>
                <div class="address-submit" style="margin-top:10%;">
                  <%= f.submit "新規登録",:class=>"text-white bg-success border border-white rounded px-4 py-1" %>
                </div>
            </div>
           <% end %>
            <table class="table">
              <thead class="border border-dark bg-light">
                <tr>
                  <th class="border border-dark">郵便番号</th>
                  <th class="border border-dark">住所</th>
                  <th class="border border-dark">宛名</th>
                  <th class="border border-dark"></th>
                </tr>
              </thead>
                <% @addresses.each do |address| %>
                  <tbody>
                    <tr class="address-index">
                      <td class="border border-dark"><%= address.postal_code %></td>
                      <td class="border border-dark"><%= address.address %></td>
                      <td class="border border-dark"><%= address.name %></td>
                      <td class="border border-dark d-flex justify-content-around">
                        <div class="address-success"><%= link_to "編集する",edit_public_address_path(address),:class=> "text-white bg-success  rounded px-4 py-2" %></div>
                        <div class="addresses-gender"><%= link_to "削除する",public_address_path(address.id),method: :delete,:class=> "text-white bg-danger   rounded px-4 py-2" %></div>
                      </td>
                    </tr>
                  </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>