<div class="container">
  <div class="row">
    <div class="col">
      <div class="order-title">
        <h4>注文履歴詳細</h4>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <TH>注文個数</TH>
              <th>注文ステータス</th>
            </tr>
          </thead>
            <tbody>
              <% @order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.order.updated_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
                <td><%= order_item.order.customer.name %></td>
              <td><%= order_item.quantity %></td>
                <td>
                  <%= order_item.quantity %></td>
                   <% if order_item.order.is_deleted == "A" %>
                    <td>入金待ち</td>
                  <% elsif order_item.order.is_deleted == "B" %>
                    <td>入金確認</td>
                  <% elsif order_item.order.is_deleted == "C" %>
                   <td>制作中</td>
                  <% elsif order_item.order.is_deleted == "D" %>
                    <td>発送準備中</td>
                  <% else %>
                    <td>発送済み</td>
                  <% end %>
              </tr>
              <% end %>
            </tbody>
        </table>
        <div class="page">
          <%= paginate @order_items %>
        </div>
    </div>
  </div>
</div>