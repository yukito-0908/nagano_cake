<div class="container">
  <div class="row">
    <div class="col">
      <div class="order-title">
        <p>注文履歴一覧</p>
      </div>
        <% if @params == "1" %>
          <table class="table">
            <thead>
              <tr>
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
              </tr>
            </thead>

                <tbody>
                   <% @order.each do |order| %>
                  <tr>
                    <td><%= order.updated_at.strftime('%m月%d日 %H:%M') %></td>
                    <td><%= order.delivery_name %></td>
                    <td>
                     <% @cart_items.each do |cart_item| %>
                    <%= cart_item.amount %>
                     <% end %>
                     </td>
                        <% if order.is_deleted == "A" %>
                          <td class="border border-dark">入金待ち</td>
                        <% elsif order.is_deleted == "B" %>
                          <td class="border border-dark">入金確認</td>
                        <% elsif order.is_deleted == "C" %>
                         <td class="border border-dark">制作中</td>
                        <% elsif order.is_deleted == "D" %>
                          <td class="border border-dark">発送準備中</td>
                        <% else %>
                          <td class="border border-dark">発送済み</td>
                        <% end %>
                  </tr>
                  <% end %>
                </tbody>
          </table>


        <% end %>
    </div>
  </div>
</div>